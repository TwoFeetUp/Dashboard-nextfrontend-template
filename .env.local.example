# ===========================================
# LHT DASHBOARD - FRONTEND ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# -------------------------------------------
# POCKETBASE DATABASE
# -------------------------------------------
NEXT_PUBLIC_POCKETBASE_URL=https://pocketbase-lht.up.railway.app

# Admin credentials for server-side operations
# Keep these SECRET - only used server-side
POCKETBASE_ADMIN_EMAIL=your-admin-email@example.com
POCKETBASE_ADMIN_PASSWORD=your-secure-password

# -------------------------------------------
# AGENT BACKEND CONFIGURATION
# -------------------------------------------
NEXT_PUBLIC_AGENT_API_URL=http://localhost:8000
NEXT_PUBLIC_USE_AGENT_BACKEND=true

# Optional API key for agent backend auth
# AGENT_API_KEY=your-agent-api-key

# -------------------------------------------
# MISTRAL AI (fallback when not using agent backend)
# -------------------------------------------
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_URL=https://api.mistral.ai/v1

# -------------------------------------------
# AUTHENTICATION & SECURITY
# -------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_random_secret_here

# -------------------------------------------
# APPLICATION
# -------------------------------------------
NEXT_PUBLIC_APP_NAME=LHT Dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3002

# -------------------------------------------
# FEATURE FLAGS
# -------------------------------------------
NEXT_PUBLIC_ENABLE_FUNCTION_VISUALIZATION=true
