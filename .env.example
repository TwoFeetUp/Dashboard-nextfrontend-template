# ===========================================
# NEXT.JS AI ASSISTANT TEMPLATE - ENVIRONMENT VARIABLES
# ===========================================

# -------------------------------------------
# APPLICATION CONFIGURATION
# -------------------------------------------
NEXT_PUBLIC_APP_NAME=AI Assistant Dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------
# POCKETBASE DATABASE
# -------------------------------------------
# PocketBase server URL (required)
NEXT_PUBLIC_POCKETBASE_URL=http://127.0.0.1:8090

# Admin credentials for server-side operations (required for enhanced features)
POCKETBASE_ADMIN_EMAIL=admin@company.com
POCKETBASE_ADMIN_PASSWORD=your_secure_password_here

# -------------------------------------------
# DEEP IDENTITY AGENTS BACKEND
# -------------------------------------------
# Agent backend API URL (required for agent integration)
NEXT_PUBLIC_AGENT_API_URL=http://localhost:8000

# Agent API authentication key (optional, if backend requires auth)
# AGENT_API_KEY=your-agent-api-key

# Feature flag to toggle between Mistral direct vs Agent backend
# Set to 'true' to use agent backend, 'false' for direct Mistral
NEXT_PUBLIC_USE_AGENT_BACKEND=false

# -------------------------------------------
# MISTRAL AI CONFIGURATION
# -------------------------------------------
# Mistral API key (required for OCR and direct chat if not using agent backend)
MISTRAL_API_KEY=your_mistral_api_key_here

# Mistral API base URL (optional, defaults to https://api.mistral.ai/v1)
MISTRAL_API_URL=https://api.mistral.ai/v1

# -------------------------------------------
# AUTHENTICATION & SECURITY
# -------------------------------------------
# NextAuth secret for session encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_random_secret_here_generate_with_openssl

# -------------------------------------------
# FEATURE FLAGS (OPTIONAL)
# -------------------------------------------
# Enable function call visualization in chat interface
NEXT_PUBLIC_ENABLE_FUNCTION_VISUALIZATION=true

# -------------------------------------------
# DEVELOPMENT ONLY
# -------------------------------------------
# Debug mode (set to 'true' for verbose logging)
# DEBUG=false

# Log level (INFO, DEBUG, WARN, ERROR)
# LOG_LEVEL=INFO
